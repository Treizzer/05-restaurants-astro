---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Agregar un nuevo restaurante">
  <div class="min-w-screen min-h-full bg-gradient-to-br from-primary via-primary-light to-theme-yellow flex flex-col items-center">
    <h1 class="text-6xl text-white font-black">Agregar un Restaurante</h1>
    
    <nav class="py-7 text-4xl flex gap-4 text-white font-medium">
      <a href="/">Inicio</a>
      <a href="/list">Lista</a>
    </nav>


    <main>
      <form class="min-w-3xl min-h-[600px] bg-white shadow-theme-b shadow-2xl rounded-2xl flex flex-col">
        <h3 class="text-3xl py-2 self-center">Ingrese los datos por favor</h3>

        <p class="pt-6 pl-6">
          <label class="relative block">
            <!-- <input 
              type="text" 
              name="name" 
              required
              class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:shadow-md focus:shadow-theme-green-a transition-shadow duration-300" 
            /> -->
          <label class="relative block">
            <input 
              type="text" 
              name="name" 
              required
              placeholder=" "
              class="peer px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-theme-green-a transition-all duration-300 w-xs
              not-placeholder-shown:outline-none not-placeholder-shown:ring-2 not-placeholder-shown:ring-theme-green-a" 
            />
            <span
            class="absolute left-4 top-2/4 -translate-y-2/4 text-gray-500 transition-all duration-300 peer-placeholder-shown:top-2/4 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-0 peer-focus:text-sm peer-focus:text-theme-violet-a peer-focus:bg-white peer-focus:px-1
            peer-focus:font-semibold peer-not-placeholder-shown:top-0 peer-not-placeholder-shown:text-sm peer-not-placeholder-shown:text-theme-violet-a peer-not-placeholder-shown:bg-white peer-not-placeholder-shown:px-1 peer-not-placeholder-shown:font-semibold"
            >
              Nombre
            </span>
          </label>
        </p>
        <!-- <button>Presióname</button> -->
      </form>
    </main>
  </div>
</Layout>

